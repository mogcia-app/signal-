rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // monthly_kpi_summaries はクライアントから直接アクセス禁止
    // Cloud Functions / API Route は Admin SDK 経由のため、このルールの影響を受けない
    match /monthly_kpi_summaries/{document=**} {
      allow read, write: if false;
    }

    match /{document=**} {
      // 認証済みユーザーに許可。ただし monthly_kpi_summaries は除外。
      allow read, write: if request.auth != null
                         && !document.matches('monthly_kpi_summaries/.*');
    }
    
    // Tool Maintenance Mode
    match /toolMaintenance/{document} {
      // 読み取り: 認証済みユーザーは誰でも読み取り可能
      allow read: if request.auth != null;
      
      // 書き込み: Admin Panelからのみ（認証済みかつ管理者）
      // 注意: 実際の管理者チェックは、カスタムクレーム（request.auth.token.admin）を使用するか、
      // 別の方法で実装してください
      allow write: if request.auth != null;
    }
  }
}
