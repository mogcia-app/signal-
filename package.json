{
  "name": "signal",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:vercel": "npm run lint:strict && npm run typecheck && next build --no-lint",
    "start": "next start",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:strict": "eslint src --ext .ts,.tsx,.js,.jsx --max-warnings=0",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ai-quality": "node scripts/ai-quality-regression.js",
    "test:firestore-rules": "node scripts/test-firestore-rules.js",
    "test:rules": "./scripts/test-rules-simple.sh",
    "migrate:home-plan-format:dry-run": "node scripts/migrate-home-plan-format.js --dry-run",
    "migrate:home-plan-format": "node scripts/migrate-home-plan-format.js",
    "migrate:post-images:dry-run": "node scripts/migrate-post-images-to-storage.js --dry-run",
    "migrate:post-images": "node scripts/migrate-post-images-to-storage.js",
    "rules:check": "firebase deploy --only firestore:rules --dry-run",
    "emulators:start": "firebase emulators:start",
    "emulators:start:firestore": "firebase emulators:start --only firestore",
    "prepare": "husky install",
    "security:audit": "npm audit",
    "security:snyk": "npx snyk test"
  },
  "dependencies": {
    "@hugeicons/core-free-icons": "^3.1.1",
    "@hugeicons/react": "^1.1.4",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@sentry/nextjs": "^8.55.0",
    "chart.js": "^4.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.2.1",
    "firebase-admin": "^13.5.0",
    "jose": "^6.1.1",
    "lucide-react": "^0.544.0",
    "next": "^15.5.9",
    "openai": "^6.1.0",
    "react": "^19.1.2",
    "react-calendar-heatmap": "^1.10.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^19.1.2",
    "react-hot-toast": "^2.6.0",
    "recharts": "^3.2.1",
    "tailwind-merge": "^3.3.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/jest": "^29.5.0",
    "@types/node": "^20.19.16",
    "@types/react": "^19",
    "@types/react-calendar-heatmap": "^1.9.0",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-next": "^15.5.9",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "tailwindcss": "^4",
    "typescript": "^5"
  }
